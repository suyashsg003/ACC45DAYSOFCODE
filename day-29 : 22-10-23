DAY-29 (SUYASH GOYAL)

#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	for(int i=0; i<t; i++){
	    int num,odd=0,even=0;
	    cin>>num;
	    int arr[num];
	    for(int i=0; i<num; i++){
	        cin>>arr[i];
	    }
	    for(int i=0; i<num; i++){
	        if(arr[i]%2!=0){
	            odd++;
	        }
	        else{
	            even++;
	        }
	    }
	    if(odd>=2 && odd%2==0){
	        cout<<"YES"<<endl;
	    }
	    else{
	        cout<<"NO"<<endl;
	    }
	}
	return 0;
}
