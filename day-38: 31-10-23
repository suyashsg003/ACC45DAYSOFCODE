  #include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	for(int i=0; i<t; i++){
	    int a,b,num;
	    cin>>num>>a>>b;
	    string s;
	    cin>>s;
	    int count0=0,count1=0;
	    for(int i=0; i<num; i++){
	        if(s[i]=='0'){
	            count0++;
	        }
	        else{
	            count1++;
	        }
	    }
	    cout<<(count0*a)+(count1*b)<<endl;
	    
	}
	return 0;
}
